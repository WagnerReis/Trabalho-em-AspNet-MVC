@model Marcenaria.Models.Funcionario

@{
    ViewBag.Title = " Visualização de Funcionario";
}


<div class="panel panel-success">
    <div class="panel-heading">Visualização de Funcionario</div>
    <div class="panel-body">
        <p>Nessa tela você poderará visualizar os dados do Funcionario.</p>
        <p></p>
    </div>
    <div class="panel panel-success">
        <div class="panel-body">

            <p></p>


            <div class="input-group">
                <span class="input-group-addon">Código</span>
                <input type="text"
                       class="form-control" placeholder="Código" name="Codigo"
                       id="ICodigo" value="@Model.Id" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Data</span>
                <input type="text" class="form-control"
                       placeholder="Nome" name="Nome" id="INome"
                       value="@Model.Nome" readonly>
            </div>

            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Tipo</span>
                <input type="checkbox" class="form-control"
                       placeholder="Tipo" name="Tipo" id="ITipo"
                       value="@Model.Tipo" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Cpf</span>
                <input type="text" class="form-control"
                       placeholder="Cpf" name="Cpf" id="ICpf"
                       value="@Model.Cpf" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Telefone</span>
                <input type="text" class="form-control"
                       placeholder="Telefone" name="Telefone" id="ITelefone"
                       value="@Model.Telefone" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Celular</span>
                <input type="text" class="form-control"
                       placeholder="Celular" name="Celular" id="ICelular"
                       value="@Model.Celular" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Estado</span>
                <input type="text" class="form-control"
                       placeholder="Estado" name="Estado" id="IEstado"
                       value="@Model.Estado" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Cidade</span>
                <input type="text" class="form-control"
                       placeholder="Cidade" name="Cidade" id="ICidade"
                       value="@Model.Cidade" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Bairro</span>
                <input type="text" class="form-control"
                       placeholder="Bairro" name="Bairro" id="IBairro"
                       value="@Model.Bairro" readonly>
            </div>

            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Rua</span>
                <input type="text" class="form-control"
                       placeholder="Rua" name="Rua" id="IRua"
                       value="@Model.Rua" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Numero</span>
                <input type="text" class="form-control"
                       placeholder="Numero" name="Numero" id="INumero"
                       value="@Model.Numero" readonly>
            </div>
            <p></p>
            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <div class="btn-group btn-group-sm">
                        @Html.ActionLink("Editar", "Edit", new { id =
                        Model.Id }, new { @class = "btn btn-default btn-sm" })
                        <a href="@Url.Action("Index", "Funcionario")"
                           class="btn btn-default btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>