@model Marcenaria.Models.ItemVenda

@{
    ViewBag.Title = "Cadastro de Item da Venda";
}

<div class="panel panel-info">
    <div class="panel-heading">Cadastro do Item da Venda</div>
    <p></p>
    @using (Html.BeginForm("Create", "ItemVenda", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {

        @Html.ValidationSummary(true)

        <div class="form-group">
            <label for="IProdutos" class="col-sm-2 control-label">Produto</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Produto.Id,
                ((IEnumerable<Marcenaria.Models.Produto>)ViewBag.Produtos).
                Select(i => new SelectListItem
                {
                    Text = i.Nome,
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Produto.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>

        <div class="form-group">
            <label for="IVenda" class="col-sm-2 control-label">Venda</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Venda.Id,
                ((IEnumerable<Marcenaria.Models.Venda>)ViewBag.Vendas).
                Select(i => new SelectListItem
                {
                    Text = i.Id.ToString(),
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Venda.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>
        <div class="form-group">
            <label for="IValor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Valor" name="Valor" id="IValor" required>
            </div>
        </div>

        <div class="form-group">
            <label for="IAno" class="col-sm-2 control-label">Quantidade</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" placeholder="Quantidade" name="Quantidade" id="IQuantidade" required>
            </div>
        </div>

        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "ItemVenda")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>


