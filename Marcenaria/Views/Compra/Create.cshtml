@model Marcenaria.Models.Compra




@{

    ViewBag.Title = "Cadastrar Compra";
}
@Html.ValidationSummary(true)
<div class="panel panel-info">
    <div class="panel-heading">Cadastro do Compra</div>
    <p></p>
    @using (Html.BeginForm("Create", "Compra", FormMethod.Post,
        new { @class = "form-horizontal", @role = "form" }))
    {
        <p></p>
        <div class="form-group">
            <label for="IData" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-3">
                <input type="date" class="form-control" placeholder="Data"
                       name="Data" id="iData">
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IFornecedores" class="col-sm-2 control-label">Fornecedor</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Fornecedor.Id,
                ((IEnumerable<Marcenaria.Models.Fornecedor>)ViewBag.fornecedores).
                Select(i => new SelectListItem
                {
                    Text = i.RazaoSocial,
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="IFuncionario" class="col-sm-2 control-label">Funcionario</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Funcionario.Id,
                ((IEnumerable<Marcenaria.Models.Funcionario>)ViewBag.Funcionarios).
                Select(i => new SelectListItem
                {
                    Text = i.Nome,
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Compra")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>



