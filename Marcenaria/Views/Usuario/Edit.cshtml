@model Marcenaria.Models.Usuario

@{
    ViewBag.Title = "Edição de Usuario";
}

@Html.ValidationSummary(true)
<div class="panel panel-warning">
    <div class="panel-heading">Edição da Usuario</div>
    <p></p>
    @using (Html.BeginForm("Edit", "Usuario",
    FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            @Html.Label("Login", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("Login", Model.Login, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <div class="form-group">
            @Html.Label("Senha", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("Senha", Model.Senha, new { @class = "form-control", type = "password", required = "true" })
        </div>

       
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>


    }
</div>