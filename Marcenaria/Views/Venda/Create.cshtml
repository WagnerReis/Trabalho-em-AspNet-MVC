@model Marcenaria.Models.Venda

@{
    ViewBag.Title = "Cadastro de Venda";
}

<div class="panel panel-info">
    <div class="panel-heading">Cadastro de Venda</div>
    <p></p>
    @using (Html.BeginForm("Create", "Venda", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {

        @Html.ValidationSummary(true)

        <div class="form-group">
            <label for="IClientes" class="col-sm-2 control-label">Cliente</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Cliente.Id,
                ((IEnumerable<Marcenaria.Models.Cliente>)ViewBag.Clientes).
                Select(i => new SelectListItem
                {
                    Text = i.Nome,
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Cliente.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>

        <div class="form-group">
            <label for="IFuncionario" class="col-sm-2 control-label">Funcionario</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Funcionario.Id,
                ((IEnumerable<Marcenaria.Models.Funcionario>)ViewBag.Funcionarios).
                Select(i => new SelectListItem
                {
                    Text = i.Nome,
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Funcionario.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>
        <div class="form-group">
            <label for="IData" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" placeholder="Data" name="Data" id="IData" required>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Venda")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>


