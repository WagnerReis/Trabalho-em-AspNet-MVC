@model Marcenaria.Models.Produto
@{
    ViewBag.Title = "Deleção de Produto";
}


<div class="panel panel-danger">
    <div class="panel-heading">Exclusão do Produto</div>
    <p></p>
    @using (Html.BeginForm("Delete", "Produto", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            <label for="INome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Nome" id="INome" value="@Model.Nome" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IValor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Valor" id="IValor" value="@Model.Valor" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IDescricao" class="col-sm-2 control-label">Descrição</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Descricao" id="IDescricao" value="@Model.Descricao" disabled>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <input type="submit" value="Excluir" class="btn btn-default btn-sm" />
                    <a href="@Url.Action("Index", "Produto")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>

