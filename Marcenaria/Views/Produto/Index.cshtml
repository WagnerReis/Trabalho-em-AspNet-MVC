@model List<Marcenaria.Models.Produto>

@{
    ViewBag.Title = "Cadastro de Produto";
}

<div class="panel panel-primary">
    <div class="panel-heading">Produtos</div>
    <div class="panel-body">
        <a href="@Url.Action("Create", "Produto")"
           class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Novo 
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th>
                Valor
            </th>
            <th>
                Descrição
            </th>
            <th>

            </th>
        </tr>
        @if (Model != null)
        {
            foreach(var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id}, new { @class = "btn btn-default btn-sm" })

                    @Html.ActionLink("Visualizar", "Details", new { id = item.Id}, new { @class = "btn btn-default btn-sm"})

                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id}, new { @class = "btn btn-default btn-sm"})
                </div>
            </td>
        </tr>
            }
        }
    </table>
</div>

