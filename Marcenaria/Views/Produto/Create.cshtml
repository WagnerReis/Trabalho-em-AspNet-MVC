@{
    ViewBag.Title = "Cadastro de Produto";
}

@Html.ValidationSummary(true)
<div class="panel panel-info">
    <div class="panel-heading">Cadastro de Produto</div>
    <p></p>
    @using (Html.BeginForm("Create", "Produto", FormMethod.Post,
        new { @class = "form-horizontal", @role = "form" }))
    {

        <div class="form-group">
            <label for="INome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Nome"
                       name="nNome" id="iNome">
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="IValor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Valor"
                       name="nValor" id="iValor">
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="IDescricao" class="col-sm-2 control-label">Descrição</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Descricao"
                       name="nDescricao" id="iDescricao">
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Produto")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>
