@model Marcenaria.Models.Produto
@{ 
    ViewBag.Title = "Edição de Produto";
}

@Html.ValidationSummary(true)
<div class="panel panel-warning">
    <div class="panel-heading">Edição do Produto</div>
    <p></p>
    @using (Html.BeginForm("Edit", "Produto",
    FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            @Html.Label("Nome", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("nNome", Model.Nome, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <div class="form-group">
            @Html.Label("Valor", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("nValor", Model.Valor, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <div class="form-group">
            @Html.Label("Descricao", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("nDescricao", Model.Descricao, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Produto")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>


    }
</div>
