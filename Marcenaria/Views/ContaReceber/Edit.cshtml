@model Marcenaria.Models.ContaReceber
@{
    ViewBag.Title = "Edição de Conta a Receber";
}

@Html.ValidationSummary(true)
<div class="panel panel-warning">
    <div class="panel-heading">Edição de Conta a Receber</div>
    <p></p>
    @using (Html.BeginForm("Edit", "ContaReceber",
    FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            @Html.Label("Valor", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("nValor", Model.Valor, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <div class="form-group">
            @Html.Label("Data", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("nData", Model.Data.ToString("dd/MM/yyyy"),
           new {@class = "form-control jqueryui-marker-datepicker", required = "true" })

        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "ContaReceber")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>


    }
</div>

