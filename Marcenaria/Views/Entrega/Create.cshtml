@model Marcenaria.Models.Entrega

@{
    ViewBag.Title = "Cadastro de Entrega";
}

<div class="panel panel-info">
    <div class="panel-heading">Cadastro de Entrega</div>
    <p></p>
    @using (Html.BeginForm("Create", "Entrega", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {

        @Html.ValidationSummary(true)

        <div class="form-group">
            <label for="IVendas" class="col-sm-2 control-label">Venda</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Venda.Id,
                ((IEnumerable<Marcenaria.Models.Venda>)ViewBag.Vendas).
                Select(i => new SelectListItem
                {
                    Text = i.Id.ToString(),
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Venda.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>

        <div class="form-group">
            <label for="IData" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" placeholder="Data" name="Data" id="IData" required>
            </div>
        </div>

        <div class="form-group">
            <label for="IEstado" class="col-sm-2 control-label">Estado</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Estado" name="Estado" id="IEstado" required>
            </div>
        </div>

        <div class="form-group">
            <label for="ISemestre" class="col-sm-2 control-label">Cidade</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Cidade" name="Cidade" id="ICidade" required>
            </div>
        </div>

        <div class="form-group">
            <label for="IRua" class="col-sm-2 control-label">Rua</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Rua" name="Rua" id="IRua" required>
            </div>
        </div>

        <div class="form-group">
            <label for="INumero" class="col-sm-2 control-label">Número</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" placeholder="Número" name="Numero" id="INumero" required>
            </div>
        </div>

        <div class="form-group">
            <label for="IBairro" class="col-sm-2 control-label">Bairro</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Bairro" name="Bairro" id="IBairro" required>
            </div>
        </div>

        <div class="form-group">
            <label for="IReferencia" class="col-sm-2 control-label">Referência</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Referência" name="Referencia" id="IReferencia" required>
            </div>
        </div>

        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "Entrega")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>

