@model Marcenaria.Models.ItemCompra
@{
    ViewBag.Title = " Deleção de Conta Pagar";
}


<div class="panel panel-danger">
    <div class="panel-heading">Exclusão de Item Compra</div>
    <p></p>
    @using (Html.BeginForm("Delete", "ItemCompra", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            <label for="IQuantidade" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-3">
                <input type="number" class="form-control" name="Quantidade" id="IQuantidade" value="@Model.Quantidade" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IValor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Valor" id="IValor" value="@Model.Valor" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="ICompra" class="col-sm-2 control-label">Compra</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Compra" id="ICompra" value="@Model.Compra" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="IProduto" class="col-sm-2 control-label">Produto</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Produto" id="IProduto" value="@Model.Produto" disabled>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <input type="submit" value="Excluir" class="btn btn-default btn-sm" />
                    <a href="@Url.Action("Index", "ItemCompra")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>

