@model Marcenaria.Models.ItemCompra
@{
                /**/

                ViewBag.Title = " Visualização de Item Compra";
}


<div class="panel panel-success">
    <div class="panel-heading">Visualização de Item Compra</div>
    <div class="panel-body">
        <p>Nessa tela você poderará visualizar os dados de Item Compra.</p>
        <p></p>
    </div>
    <div class="panel panel-success">
        <div class="panel-body">

            <p></p>


            <div class="input-group">
                <span class="input-group-addon">Código</span>
                <input type="text"
                       class="form-control" placeholder="Código" name="Codigo"
                       id="ICodigo" value="@Model.Id" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Quantidade</span>
                <input type="number" class="form-control"
                       placeholder="Quantidade" name="Quantidade" id="IQuantidade"
                       value="@Model.Quantidade" readonly>
            </div>

            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Valor</span>
                <input type="text" class="form-control"
                       placeholder="Valor" name="Valor" id="IValor"
                       value="@Model.Valor" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Compra</span>
                <input type="text" class="form-control"
                       placeholder="Compra" name="Compra" id="ICompra"
                       value="@Model.Compra" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Produto</span>
                <input type="text" class="form-control"
                       placeholder="Produto" name="Produto" id="IProduto"
                       value="@Model.Produto" readonly>
            </div>
            <p></p>
            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <div class="btn-group btn-group-sm">
                        @Html.ActionLink("Editar", "Edit", new { id =
                        Model.Id }, new { @class = "btn btn-default btn-sm" })
                        <a href="@Url.Action("Index", "ItemCompra")"
                           class="btn btn-default btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>