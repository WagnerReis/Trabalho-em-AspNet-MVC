@model Marcenaria.Models.Cliente
@{
    ViewBag.Title = "Deleção de Cliente";
}


<div class="panel panel-danger">
    <div class="panel-heading">Exclusão de Cliente</div>
    <p></p>
    @using (Html.BeginForm("Delete", "Cliente", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            <label for="INome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Nome" id="INome" value="@Model.Nome" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="ITelefone" class="col-sm-2 control-label">Telefone</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Telefone" id="ITelefone" value="@Model.Telefone" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="ICelular" class="col-sm-2 control-label">Celular</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Celular" id="ICelular" value="@Model.Celular" disabled>
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="ICpf" class="col-sm-2 control-label">Cpf</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Cpf" id="ICpf" value="@Model.Cpf" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="ICnpj" class="col-sm-2 control-label">Cnpj</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Cnpj" id="ICnpj" value="@Model.Cnpj" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IEstado" class="col-sm-2 control-label">Estado</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Estado" id="IEstado" value="@Model.Estado" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="ICidade" class="col-sm-2 control-label">Cidade</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Cidade" id="ICidade" value="@Model.Cidade" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="IRua" class="col-sm-2 control-label">Rua</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Rua" id="IRua" value="@Model.Rua" disabled>
            </div>
        </div>
        <p></p>

        <div class="form-group">
            <label for="INumero" class="col-sm-2 control-label">Numero</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" name="Numero" id="INumero" value="@Model.Numero" disabled>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <input type="submit" value="Excluir" class="btn btn-default btn-sm" />
                    <a href="@Url.Action("Index", "Cliente")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>
