@model Marcenaria.Models.Cliente
@{
    ViewBag.Title = "Visualização do Cliente";
}


<div class="panel panel-success">
    <div class="panel-heading">Visualização do Cliente</div>
    <div class="panel panel-success">
        <div class="panel-body">
            <div class="row">
                <p></p>
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Código</span>
                        <input type="text" class="form-control" name="Codigo" id="ICodigo"
                               value="@Model.Id" readonly />
                    </div>
                </div>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Nome</span>
                <input type="text" class="form-control"
                       name="Nome" id="INome" value="@Model.Nome" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Telefone</span>
                <input type="text" class="form-control" name="Telefone" id="ITelefone"
                       value="@Model.Telefone" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Celular</span>
                <input type="text" class="form-control" name="Celular" id="ICelular"
                       value="@Model.Celular" readonly />
            </div>
            <p></p>
            @if (@Model.Tipo == false)
            {
                <div class="input-group">
                    <span class="input-group-addon">Cpf</span>
                    <input type="text" class="form-control" name="Cpf" id="ICpf"
                           value="@Model.Cpf" readonly />
                </div>
                <p></p>
            }
            else
            {
                <div class="input-group">
                    <span class="input-group-addon">Cnpj</span>
                    <input type="text" class="form-control" name="Cnpj" id="ICnpj"
                           value="@Model.Cnpj" readonly />
                </div>
                <p></p>
            }
            <div class="input-group">
                <span class="input-group-addon">Estado</span>
                <input type="text" class="form-control" name="Estado" id="IEstado"
                       value="@Model.Estado" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Cidade</span>
                <input type="text" class="form-control" name="Cidade" id="ICidade"
                       value="@Model.Cidade" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Bairro</span>
                <input type="text" class="form-control" name="Bairro" id="IBairro"
                       value="@Model.Bairro" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Rua</span>
                <input type="text" class="form-control" name="Rua" id="IRua"
                       value="@Model.Rua" readonly />
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Numero</span>
                <input type="number" class="form-control" name="Numero" id="INumero"
                       value="@Model.Numero" readonly />
            </div>
            <p></p>

            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <div class="btn-group btn-group-sm">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-default btn-sm" })
                        <a href="@Url.Action("Index", "Cliente")" class="btn btn-default btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
