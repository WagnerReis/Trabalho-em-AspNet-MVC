@model List<Marcenaria.Models.Cliente>

@{
    ViewBag.Title = "Cadastro de Cliente";
}

<div class="panel panel-primary">
    <div class="panel-heading">Clientes</div>
    <div class="panel-body">
        <a href="@Url.Action("Create", "Cliente")"
           class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Novo
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>

            <th>
                Telefone
            </th>
            <th>
                Celular
            </th>
            <th>
                Tipo
            </th>
            <th>
                Cpf
            </th>
            <th>
                Cnpj
            </th>
            <th>
                Estado
            </th>
            <th>
                Cidade
            </th>
            <th>
                Bairro
            </th>
            <th>
                Rua
            </th>
            <th>
                Numero
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>

            <td>
                <div class="btn-group btn-group-sm">
                    @Html.ActionLink("Editar", "Edit",
                    new { id = item.Id },
                    new { @class = "btn btn-default btn-sm" })

                    @Html.ActionLink("Visualizar", "Details",
                    new { id = item.Id },
                    new { @class = "btn btn-default btn-sm" })

                    @Html.ActionLink("Excluir", "Delete",
                    new { id = item.Id },
                    new { @class = "btn btn-default btn-sm" })
                </div>
            </td>
        </tr>
            }
        }
    </table>
</div>
