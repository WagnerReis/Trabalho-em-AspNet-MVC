@model Marcenaria.Models.ContaPagar

@{
    ViewBag.Title = " Visualização de Conta Pagar";
}


<div class="panel panel-success">
    <div class="panel-heading">Visualização do Conta Pagar</div>
    <div class="panel-body">
        <p>Nessa tela você poderará visualizar os dados da Conta Pagar.</p>
        <p></p>
    </div>
    <div class="panel panel-success">
        <div class="panel-body">

            <p></p>


            <div class="input-group">
                <span class="input-group-addon">Código</span>
                <input type="text"
                       class="form-control" placeholder="Código" name="Codigo"
                       id="ICodigo" value="@Model.Id" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Data</span>
                <input type="text" class="form-control"
                       placeholder="Data" name="Data" id="IData"
                       value="@Model.Data" readonly>
            </div>

            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Valor</span>
                <input type="text" class="form-control"
                       placeholder="Valor" name="Valor" id="IValor"
                       value="@Model.Valor" readonly>
            </div>
            <p></p>
            <div class="input-group">
                <span class="input-group-addon">Compra</span>
                <input type="text" class="form-control"
                       placeholder="Compra" name="Compra" id="ICompra"
                       value="@Model.Compra" readonly>
            </div>
            <p></p>

            <p></p>
            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <div class="btn-group btn-group-sm">
                        @Html.ActionLink("Editar", "Edit", new { id =
                        Model.Id }, new { @class = "btn btn-default btn-sm" })
                        <a href="@Url.Action("Index", "ContaPagar")"
                           class="btn btn-default btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>