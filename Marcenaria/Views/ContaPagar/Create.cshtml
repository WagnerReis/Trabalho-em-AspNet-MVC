@model Marcenaria.Models.ContaPagar




@{
    /**/

    /**/

    ViewBag.Title = "Cadastrar Conta Pagar";
}
@Html.ValidationSummary(true)
<div class="panel panel-info">
    <div class="panel-heading">Cadastro do Compra</div>
    <p></p>
    @using (Html.BeginForm("Create", "ContaPagar", FormMethod.Post,
        new { @class = "form-horizontal", @role = "form" }))
    {
        <p></p>
        <div class="form-group">
            <label for="IData" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-3">
                <input type="date" class="form-control" placeholder="Data"
                       name="Data" id="iData">
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="IValor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-3">
                <input type="number" class="form-control" placeholder="Valor"
                       name="Valor" id="iValor">
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="ICompra" class="col-sm-2 control-label">Compra</label>

            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.Compra.Id,
                ((IEnumerable<Marcenaria.Models.Compra>)ViewBag.Compras).
                Select(i => new SelectListItem
                {
                    Text =Convert.ToString(i.Id),
                    Value = i.Id.ToString(),
                    Selected = (Model != null) && (i.Id == Model.Id)
                }), "Escolha uma opção...", new { @class = "form-control", required = "required" }
                )
            </div>
        </div>
        <p></p>
        
        <p></p>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "ContaPagar")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>
        <p></p>
    }
</div>



