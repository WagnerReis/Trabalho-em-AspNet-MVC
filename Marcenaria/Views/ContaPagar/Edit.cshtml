@model Marcenaria.Models.ContaPagar

@{
    ViewBag.Title = "Edicao da Conta Pagar";
}


@Html.ValidationSummary(true)
<div class="panel panel-warning">
    <div class="panel-heading">Edição da Conta Pagar</div>
    <p></p>
    @using (Html.BeginForm("Edit", "ContaPagar",
    FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            @Html.Label("Data", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("Data", Model.Data, new { @class = "form-control", type = "text", required = "false" })
        </div>
        <div class="form-group">
            @Html.Label("Valor", new { @class = "col-sm-2 control-label" })
            @Html.TextBox("Valor", Model.Valor, new { @class = "form-control", type = "text", required = "true" })
        </div>

        <p></p>

        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="btn-group btn-group-sm">
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <a href="@Url.Action("Index", "ContaPagar")" class="btn btn-default btn-sm">Voltar</a>
                </div>
            </div>
        </div>


    }
</div>